page {
  display: flex;    /* 启动弹性布局 */
  height: 100vh;    
  flex-direction: column;   /* 设置弹性方向，以纵轴作为主轴 */
}

.map-box {
  flex: 1;
  width: 100%;
  background-color: red;
}

#myMap {
  width: 100%;
  height: 100%;
  position: relative;
}

.main-btn {
  height: 100rpx;
  width: 100%;
  background-color: green;
}

cover-image, cover-view {
  position: absolute;     
}

.map-icon {
  right: 20rpx;
  width: 76rpx;
  height: 76rpx;
}

.map-icon_msg {
  bottom: 242rpx;
}

.map-icon_user {
  bottom: 142rpx;
}

.map-icon_reset {
  bottom: 42rpx;
}