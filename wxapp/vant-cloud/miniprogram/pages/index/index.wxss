/* miniprogram/pages/index/index.wxss */
.new-item {
  width: 80%;
  background-color: #fff;
  border-radius: 38rpx;
  height: 200rpx;
  text-align: center;
  margin: 40rpx auto;
  box-shadow: 0px 7px 20px #aaa;    /* x轴的偏移量，y轴的偏移量，阴影的宽度 */
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  transition: 0.5s all;
}

.new-item image {
  width: 124rpx;
  height: 124rpx;
}

.right-conner {
  display: flex;
  flex-direction: column;   /* 弹性布局的方向 */
  justify-content: space-between;
}

.right-conner .item-name {
  margin-right: 14rpx;
}

.icon-arrow {
  text-align: right;
  padding-right: 13rpx;
}

.new-item:hover {
  box-shadow: none;
}

.index-img {
  width:370rpx;
  height:370rpx;
  border-radius:50%;
  position:absolute;
  bottom:200rpx;
  left:0;
  right:0;
  margin:auto;
  box-shadow: 0px 7px 20px 4px #ececec;
}
